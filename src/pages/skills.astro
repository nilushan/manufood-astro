---
import Layout from '@/layouts/Layout.astro'
import SkillsGrid from '@/components/sections/SkillsGrid.astro'
import { portfolioData } from '@/data/portfolio'

const { skills, skillCategories } = portfolioData
---

<Layout title="Skills - Nilushan Silva" description="Explore my comprehensive technical skill set including programming languages, frameworks, cloud platforms, and development tools.">
  <!-- Page Header -->
  <section class="hero bg-gradient-to-r from-primary/10 to-secondary/10 py-20">
    <div class="hero-content text-center">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold mb-6 text-base-content">
          Technical Skills
        </h1>
        <p class="text-lg text-base-content/70">
          A comprehensive overview of my technical expertise across full-stack development, cloud platforms, and modern development practices.
        </p>
      </div>
    </div>
  </section>

  <!-- Skills Overview Stats -->
  <section class="py-16 bg-base-200">
    <div class="container mx-auto px-4">
      <div class="stats stats-vertical lg:stats-horizontal shadow-xl w-full max-w-4xl mx-auto bg-base-100">
        <div class="stat place-items-center">
          <div class="stat-figure text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-10 w-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
            </svg>
          </div>
          <div class="stat-title">Languages</div>
          <div class="stat-value text-primary">{skills.programming.length}</div>
          <div class="stat-desc">Programming Languages</div>
        </div>
        
        <div class="stat place-items-center">
          <div class="stat-figure text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-10 w-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
            </svg>
          </div>
          <div class="stat-title">Cloud Services</div>
          <div class="stat-value text-secondary">{skills.cloud.gcp.actively.length}+</div>
          <div class="stat-desc">GCP Services</div>
        </div>
        
        <div class="stat place-items-center">
          <div class="stat-figure text-accent">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-10 w-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.240.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
            </svg>
          </div>
          <div class="stat-title">Development Tools</div>
          <div class="stat-value text-accent">{skills.tools.length}</div>
          <div class="stat-desc">Tools & Platforms</div>
        </div>
        
        <div class="stat place-items-center">
          <div class="stat-figure text-info">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-10 w-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="stat-title">Experience</div>
          <div class="stat-value text-info">15+</div>
          <div class="stat-desc">Years in Tech</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Grid -->
  <section class="py-16 lg:py-24">
    <div class="container mx-auto px-4">
      <SkillsGrid 
        skillCategories={skillCategories} 
        showAll={true}
      />
    </div>
  </section>

  <!-- Cloud Platforms Comparison -->
  <section class="py-16 bg-base-200">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4 text-base-content">
          Cloud Platform Experience
        </h2>
        <p class="text-lg text-base-content/70">
          My experience across different cloud platforms and services
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Google Cloud Platform -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-7 w-7 text-primary">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold">Google Cloud</h3>
                <div class="badge badge-success">Expert</div>
              </div>
            </div>
            
            <p class="text-base-content/80 mb-4">6+ years of production experience</p>
            
            <div class="space-y-2">
              <h4 class="font-semibold text-sm">Actively Using:</h4>
              <div class="flex flex-wrap gap-1">
                {skills.cloud.gcp.actively.slice(0, 8).map((service) => (
                  <div class="badge badge-primary badge-sm">{service}</div>
                ))}
              </div>
            </div>
          </div>
        </div>
        
        <!-- AWS -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-secondary/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-7 w-7 text-secondary">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold">Amazon AWS</h3>
                <div class="badge badge-warning">Learning</div>
              </div>
            </div>
            
            <p class="text-base-content/80 mb-4">Currently expanding knowledge</p>
            
            <div class="space-y-2">
              <h4 class="font-semibold text-sm">Familiar With:</h4>
              <div class="flex flex-wrap gap-1">
                {skills.cloud.aws.familiar.slice(0, 6).map((service) => (
                  <div class="badge badge-secondary badge-sm">{service}</div>
                ))}
              </div>
            </div>
          </div>
        </div>
        
        <!-- Azure -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-7 w-7 text-accent">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold">Microsoft Azure</h3>
                <div class="badge badge-accent">Familiar</div>
              </div>
            </div>
            
            <p class="text-base-content/80 mb-4">Basic understanding and usage</p>
            
            <div class="space-y-2">
              <h4 class="font-semibold text-sm">Familiar With:</h4>
              <div class="flex flex-wrap gap-1">
                {skills.cloud.azure.familiar.map((service) => (
                  <div class="badge badge-accent badge-sm">{service}</div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skill Proficiency Legend -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="card bg-gradient-to-r from-info/10 to-accent/10 shadow-lg">
          <div class="card-body">
            <h3 class="text-2xl font-bold mb-6 text-center">Skill Proficiency Guide</h3>
            <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
              <div class="text-center">
                <div class="w-16 h-16 bg-success/10 rounded-full flex items-center justify-center mx-auto mb-3">
                  <div class="badge badge-success">Expert</div>
                </div>
                <h4 class="font-semibold mb-2">Expert Level</h4>
                <p class="text-xs text-base-content/70">5+ years of production experience, can mentor others, deep understanding of best practices</p>
              </div>
              <div class="text-center">
                <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
                  <div class="badge badge-primary">Advanced</div>
                </div>
                <h4 class="font-semibold mb-2">Advanced Level</h4>
                <p class="text-xs text-base-content/70">3+ years experience, comfortable with complex projects, good understanding of patterns</p>
              </div>
              <div class="text-center">
                <div class="w-16 h-16 bg-secondary/10 rounded-full flex items-center justify-center mx-auto mb-3">
                  <div class="badge badge-secondary">Intermediate</div>
                </div>
                <h4 class="font-semibold mb-2">Intermediate Level</h4>
                <p class="text-xs text-base-content/70">1-3 years experience, can work independently, understand core concepts</p>
              </div>
              <div class="text-center">
                <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-3">
                  <div class="badge badge-accent">Familiar</div>
                </div>
                <h4 class="font-semibold mb-2">Familiar Level</h4>
                <p class="text-xs text-base-content/70">Basic understanding, can work with guidance, learning actively</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-primary to-secondary">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold mb-4 text-primary-content">
          Let's Build Something Amazing Together
        </h2>
        <p class="text-lg text-primary-content/80 mb-8">
          With my diverse skill set and experience, I can help bring your technical vision to life. 
          Whether it's cloud architecture, full-stack development, or IoT solutions.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn btn-accent btn-lg">
            Start a Conversation
          </a>
          <a href="/projects" class="btn btn-outline btn-lg text-primary-content border-primary-content hover:bg-primary-content hover:text-primary">
            See My Work
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
