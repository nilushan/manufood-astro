---
import Layout from '@/layouts/Layout.astro'
import Hero from '@/components/sections/Hero.astro'
import ExperienceTimeline from '@/components/sections/ExperienceTimeline.astro'
import ProjectsGallery from '@/components/sections/ProjectsGallery.astro'
import SkillsGrid from '@/components/sections/SkillsGrid.astro'
import ContactSection from '@/components/sections/ContactSection.astro'
import { portfolioData } from '@/data/portfolio'

const { personal, experience, projects, skills, skillCategories } = portfolioData
const featuredProjects = projects.map(p => ({ ...p, type: 'featured' })).slice(0, 3)
const recentExperience = experience; //.slice(0, 2)
---

<Layout>
  <!-- Hero Section -->
  <Hero />
  
  <!-- About Preview Section -->
  <section class="py-16 lg:py-24 bg-base-200">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl lg:text-4xl font-bold mb-8 text-base-content">
          About Me
        </h2>
        <p class="text-lg leading-relaxed text-base-content/80 mb-8">
          {personal.summary}
        </p>
        <div class="flex flex-wrap justify-center gap-2 mb-8">
          <div class="badge badge-primary badge-lg">TypeScript Expert</div>
          <div class="badge badge-secondary badge-lg">GCP Architect</div>
          <div class="badge badge-accent badge-lg">IoT Specialist</div>
          <div class="badge badge-info badge-lg">DevOps Engineer</div>
        </div>
        <a href="/about" class="btn btn-primary btn-lg">
          Learn More About Me
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 ml-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-16 lg:py-24">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4 text-base-content">
          Featured Projects
        </h2>
        <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
          Here are some of my most impactful projects that demonstrate my expertise in full-stack development and cloud architecture.
        </p>
      </div>
      
      <ProjectsGallery 
        projects={featuredProjects} 
        showAll={false} 
        maxProjects={3}
        layout="grid"
      />
    </div>
  </section>

  <!-- Experience Timeline Section -->
  <section class="py-16 lg:py-24 bg-base-200">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4 text-base-content">
          Professional Experience
        </h2>
        <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
          A timeline of my career progression and key achievements in full-stack development and cloud engineering.
        </p>
      </div>
      
      <ExperienceTimeline 
        experiences={recentExperience} 
        showAll={false} 
        maxItems={2}
      />
    </div>
  </section>

  <!-- Skills Overview Section -->
  <section class="py-16 lg:py-24">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4 text-base-content">
          Technical Skills
        </h2>
        <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
          A comprehensive overview of my technical expertise across different domains of software development.
        </p>
      </div>
      
      <SkillsGrid 
        skillCategories={skillCategories} 
        showAll={false} 
        maxSkillsPerCategory={4}
      />
    </div>
  </section>

  <!-- Contact Section -->
  <!-- <ContactSection 
    contactInfo={personal}
    showForm={false}
    title="Ready to Work Together?"
    subtitle="I'm always interested in new opportunities and challenging projects. Let's discuss how I can help bring your ideas to life."
  /> -->
</Layout>
