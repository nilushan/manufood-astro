---
import Layout from '@/layouts/Layout.astro'
import { portfolioData } from '@/data/portfolio'

const { projects } = portfolioData
---

<Layout title="Projects - Nilushan Silva" description="Explore my portfolio of full-stack development and cloud engineering projects, featuring IoT platforms, voice control systems, and web applications.">
  <!-- Page Header -->
  <section class="hero bg-gradient-to-r from-primary/10 to-secondary/10 py-20">
    <div class="hero-content text-center">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold mb-6 text-base-content">
          My Projects
        </h1>
        <p class="text-lg text-base-content/70">
          A showcase of my most impactful work in full-stack development, cloud architecture, and IoT solutions.
        </p>
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-16 lg:py-24">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-1 gap-12 max-w-6xl mx-auto">
        {projects.map((project, index) => (
          <div class="card lg:card-side bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
            <figure class="lg:w-1/3">
              <div class="w-full h-64 lg:h-full bg-gradient-to-br from-primary/20 via-secondary/20 to-accent/20 flex items-center justify-center relative overflow-hidden">
                <!-- Project Icon based on type -->
                <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-secondary/10"></div>
                <div class="relative z-10">
                  {index === 0 && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="0.5" stroke="currentColor" class="h-24 w-24 text-primary">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6.115 5.19l.319 1.913A6 6 0 008.11 10.36L9.75 12l-.387.775c-.217.433-.132.956.21 1.298l1.348 1.348c.21.21.329.497.329.795v1.089c0 .426.24.815.622 1.006l.153.076c.433.217.956.132 1.298-.21l.723-.723a8.7 8.7 0 002.288-4.042 1.087 1.087 0 00-.358-1.099l-1.33-1.108c-.251-.21-.582-.299-.905-.245l-1.17.195a1.125 1.125 0 01-.98-.314l-.295-.295a1.125 1.125 0 010-1.591l.13-.132a1.125 1.125 0 011.3-.21l.603.302a.809.809 0 001.086-1.086L14.25 7.5l1.256-.837a4.5 4.5 0 001.528-1.732l.146-.292M6.115 5.19A9 9 0 1017.18 4.64M6.115 5.19A8.965 8.965 0 0112 3c1.929 0 3.716.607 5.18 1.64" />
                    </svg>
                  )}
                  {index === 1 && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="0.5" stroke="currentColor" class="h-24 w-24 text-secondary">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.114 5.636a9 9 0 010 12.728M16.463 8.288a5.25 5.25 0 010 7.424M6.75 8.25l4.72-4.72a.75.75 0 011.28.53v15.88a.75.75 0 01-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.01 9.01 0 012.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75z" />
                    </svg>
                  )}
                  {index === 2 && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="0.5" stroke="currentColor" class="h-24 w-24 text-accent">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
                    </svg>
                  )}
                </div>
                <!-- Animated background elements -->
                <div class="absolute top-4 left-4 w-2 h-2 bg-primary/30 rounded-full animate-pulse"></div>
                <div class="absolute bottom-6 right-6 w-3 h-3 bg-secondary/30 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
                <div class="absolute top-1/2 right-4 w-1 h-1 bg-accent/30 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
              </div>
            </figure>
            <div class="card-body lg:w-2/3">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                <h2 class="card-title text-2xl group-hover:text-primary transition-colors">
                  {project.title}
                </h2>
                <div class="badge badge-primary badge-lg mt-2 sm:mt-0">
                  {project.period}
                </div>
              </div>
              
              <p class="text-base-content/80 mb-6 leading-relaxed">
                {project.description}
              </p>
              
              <!-- Key Achievements -->
              <div class="mb-6">
                <h3 class="font-semibold text-base-content mb-3 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-success">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Key Achievements
                </h3>
                <div class="grid sm:grid-cols-2 gap-3">
                  {project.achievements.map((achievement) => (
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 bg-success rounded-full mt-2 flex-shrink-0"></div>
                      <span class="text-sm text-base-content/80">{achievement}</span>
                    </div>
                  ))}
                </div>
              </div>
              
              <!-- Technologies -->
              <div class="mb-6">
                <h3 class="font-semibold text-base-content mb-3 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-info">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
                  </svg>
                  Technologies Used
                </h3>
                <div class="flex flex-wrap gap-2">
                  {project.technologies.map((tech) => (
                    <div class="badge badge-outline">{tech}</div>
                  ))}
                </div>
              </div>
              
              <!-- Project Stats -->
              <div class="stats stats-horizontal shadow bg-base-200 text-base-content">
                {index === 0 && (
                  <>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Devices</div>
                      <div class="stat-value text-lg text-primary">55K+</div>
                    </div>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Uptime</div>
                      <div class="stat-value text-lg text-success">99.999%</div>
                    </div>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Cost Reduction</div>
                      <div class="stat-value text-lg text-secondary">50%</div>
                    </div>
                  </>
                )}
                {index === 1 && (
                  <>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Platforms</div>
                      <div class="stat-value text-lg text-primary">2</div>
                    </div>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Status</div>
                      <div class="stat-value text-lg text-success">Certified</div>
                    </div>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Integration</div>
                      <div class="stat-value text-lg text-secondary">Real-time</div>
                    </div>
                  </>
                )}
                {index === 2 && (
                  <>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Data Points</div>
                      <div class="stat-value text-lg text-primary">Real-time</div>
                    </div>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Monitoring</div>
                      <div class="stat-value text-lg text-success">24/7</div>
                    </div>
                    <div class="stat place-items-center py-2">
                      <div class="stat-title text-xs">Visualization</div>
                      <div class="stat-value text-lg text-secondary">Interactive</div>
                    </div>
                  </>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Additional Projects Notice -->
      <div class="text-center mt-16">
        <div class="card bg-gradient-to-r from-info/10 to-accent/10 shadow-lg">
          <div class="card-body">
            <h3 class="text-2xl font-bold mb-4 text-base-content">More Projects</h3>
            <p class="text-base-content/80 mb-6 max-w-2xl mx-auto">
              These are just a few highlights from my portfolio. I've worked on many more projects across different 
              domains including military simulation software, open-source tools, and various web applications. 
              Each project has taught me valuable lessons and contributed to my growth as a developer.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/contact" class="btn btn-primary">
                Discuss Your Project
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </a>
              <a href={`https://github.com/${portfolioData.personal.social.github}`} target="_blank" rel="noopener noreferrer" class="btn btn-outline">
                View GitHub
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
