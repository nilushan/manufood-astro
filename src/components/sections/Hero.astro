---
import { portfolioData } from "@/data/portfolio";

const { personal } = portfolioData;

// Get initials for avatar fallback
const initials = personal.name
  .split(" ")
  .map((n) => n[0])
  .join("");
---

<section class="hero min-h-[calc(100vh-4rem)]">
  <div
    class="hero-content flex-col lg:flex-row-reverse gap-8 lg:gap-16 w-full max-w-7xl py-8 lg:py-16"
  >
    <!-- Avatar Section -->
    <div class="flex-shrink-0">
      <div class="avatar placeholder">
        <div
          class="bg-primary text-primary-content w-48 sm:w-64 lg:w-80 rounded-full ring ring-primary ring-offset-base-100 ring-offset-4 sm:ring-offset-8"
        >
          <span class="text-5xl sm:text-6xl lg:text-7xl">{initials}</span>
        </div>
      </div>
      <!-- Status Indicator -->
      <div class="flex justify-center mt-6">
        <div class="badge badge-success badge-lg gap-2 text-success-content">
          <div class="h-2 w-2 rounded-full bg-current animate-pulse"></div>
          Available for the next awsome idea
        </div>
      </div>
    </div>

    <!-- Content Section -->
    <div class="text-center lg:text-left max-w-2xl">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-base-content">
        Hi, I'm <span class="text-primary">{personal.name.split(" ")[0]}</span>
      </h1>
      <h2
        class="text-xl sm:text-2xl lg:text-3xl font-semibold mt-4 mb-6 text-base-content/70"
      >
        {personal.title}
      </h2>

      <!-- <p class="text-base sm:text-lg leading-relaxed text-base-content/80 mb-8"> -->
      {
        personal.summary.map((item) => (
          <p class="text-base sm:text-lg leading-relaxed text-base-content/80 mb-8">
            {item}
          </p>
        ))
      }
      <!-- </p> -->

      <div class="flex flex-wrap justify-center gap-2 mb-8">
        <div class="badge badge-primary badge-lg">TypeScript Expert</div>
        <div class="badge badge-secondary badge-lg">GCP Architect</div>
        <div class="badge badge-accent badge-lg">IoT Specialist</div>
        <div class="badge badge-info badge-lg">DevOps Engineer</div>
      </div>


      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
      >
            <a href="/about" class="btn btn-primary btn-lg">
        Learn More About Me
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-5 w-5 ml-2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
        </svg>
      </a>

        <a href="/projects" class="btn btn-primary btn-lg group">
          <span>View Projects</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-5 w-5 transition-transform group-hover:translate-x-1"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
          </svg>
        </a>
  
      </div>

      <!-- Stats Section -->
      <div
        class="stats stats-vertical sm:stats-horizontal shadow-lg mt-12 w-full bg-base-200 text-base-content"
      >
        <div class="stat place-items-center sm:place-items-start">
          <div class="stat-figure text-primary">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-8 w-8"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="stat-title text-base-content/60">Experience</div>
          <div class="stat-value text-3xl lg:text-4xl text-primary">
            {personal.yearsExperience}+
          </div>
          <div class="stat-desc text-base-content/60">Years in Tech</div>
        </div>

        <!-- <div class="stat place-items-center sm:place-items-start">
          <div class="stat-figure text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-8 w-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
            </svg>
          </div>
          <div class="stat-title text-base-content/60">Projects</div>
          <div class="stat-value text-3xl lg:text-4xl text-secondary">50+</div>
          <div class="stat-desc text-base-content/60">Successfully Delivered</div>
        </div> -->

        <div class="stat place-items-center sm:place-items-start">
          <div class="stat-figure text-accent">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-8 w-8"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"
              ></path>
            </svg>
          </div>
          <div class="stat-title text-base-content/60">Technologies</div>
          <div class="stat-value text-3xl lg:text-4xl text-accent">25+</div>
          <div class="stat-desc text-base-content/60">In Production</div>
        </div>
      </div>

      <!-- Quick Links -->
      <div
        class="flex flex-wrap gap-2 sm:gap-4 mt-8 justify-center lg:justify-start"
      >
        <a
          href={`https://github.com/${personal.github}`}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-ghost btn-sm gap-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          <span>GitHub</span>
        </a>
        <a
          href={`https://linkedin.com/in/${personal.linkedin}`}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-ghost btn-sm gap-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
          <span>LinkedIn</span>
        </a>
        <a href={`mailto:${personal.email}`} class="btn btn-ghost btn-sm gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-5 w-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
            ></path>
          </svg>
          <span>Email</span>
        </a>
      </div>
    </div>
  </div>
</section>
